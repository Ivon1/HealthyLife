                                <img src="~/img/img_users/image_default_15.png" width="98px" height="98px" class="df-photo">
                            </div>
                            <div class="col-auto" style="width: 105px; height:105px">
                                <img src="~/img/img_users/image_default_16.png" width="98px" height="98px" class="df-photo">
                            </div>
                        </div>
                        
                        <div class="center-items-inside mt-4" 
                        style="color: #2C3447; font-weight: 500;font-size: 30px;
                            line-height: 30px; width:85%; margin-left:58px">або Можете завантажити власне фото</div> 
                        
                        <div class="center-items-inside mt-4">
                            <label for="images" class="drop-container">
                                  <span class="drop-title">Завантажити фото</span>
                                  <input type="file" id="images" accept="image/*" asp-for="Input.NewPathToPhoto">
                                  <input style="display:none" name="photo-gal" id="photo-gal"/>
                            </label>
                        </div>
                    </div>
                </div>
            </form>
        </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/change_photo.js"></script>
}
