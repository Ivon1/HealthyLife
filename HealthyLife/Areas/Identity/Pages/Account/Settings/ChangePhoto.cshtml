@page
@model ChangePhoto
@{
    ViewData["Title"] = "Фото профілю";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/settings_profile.css" asp-append-version="true" />
<style>
    /**{
        border: 1px solid red;
    }*/
</style>

<div style="width: 100%; height: 665px; display:block; overflow: hidden;
        background: linear-gradient(270deg, #218F7A 0%, #296060 48.44%, #313648 100%);">
        <div class="row" style="margin-left: 150px;margin-top: 10px">
            <div class="row" style="margin-left: 10px; margin-top: 5px; width: 600px">
                <div class="col-auto text">
                    <h3 class="text" style="color: white; font-weight: 500;font-size: 40px; line-height: 40px;margin-left: 10px ">
                        Зміна фото профілю
                    </h3>
                </div>
            </div>
        </div>
       
