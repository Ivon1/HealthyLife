                <div class="row">
                    <div class="col-auto">
                        <img src="~/img/img_users/@Model.Input.CurrentPathToPhoto" class="img-profile" 
                             id="img-profile"/>
                        <br />
                        <button type="submit" class="save-button-tr mt-4 center-items-inside">Зберегти</button>
                        <a class="cancel-button-tr mt-4 center-items-inside" id="cancel-btn-photo" 
                            style="cursor:pointer; text-decoration: none;" asp-page="/Account/Manage/CurrentCourses">Скасувати зміни</a>
                        <div class="mt-4" style="width: 150px!important; height:100px!important ">
                            <partial name="_StatusMessage" for="StatusMessage"/>
                        </div>
                    </div>
                    <div class="col-md-10">
                        <h3 class="text" style="color: #2C3447; font-weight: 500;font-size: 30px;line-height: 30px; width:350px; margin-left:58px">
                            Оберіть із запропонованих
                        </h3>
                        <div class="row mt-4" style="margin-left:58px">
                            <div class="col-auto" style="width: 105px; height:105px">
                                <img src="~/img/img_users/image_default_1.png" width="98px" height="98px" class="df-photo">
                            </div>
                            <div class="col-auto" style="width: 105px; height:105px">
                                <img src="~/img/img_users/image_default_2.png" width="98px" height="98px" class="df-photo">
