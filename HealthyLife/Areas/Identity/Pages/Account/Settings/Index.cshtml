@page
@model IndexModel;
@using HealthyLife.Models;
@using HealthyLife.Data;
@inject ApplicationDbContext _context;
@{
    ViewData["Title"] = "Профіль";
    ViewData["ActivePage"] = SettingsNavPages.Index;
    Layout = "/Areas/Identity/Pages/Account/Settings/_Layout.cshtml";
}

<partial name="_StatusMessage" for="StatusMessage" />
@*<style>
    *{
        border:1px solid green;
    }
</style>*@
<div class="container-fluid">
<form id="profile-form" method="post" style="padding: 15px">
    <div class="row">
        <div class="col-6">
            <div class="form-floating mb-3" style="margin-left: 75px">
                <div class="row" style="margin-left: 5px; width: 100%">   
                    <h3 class="col-2 label-setting" style="margin-top: 5px">Ім’я</h3>
                    <h3 style="color:#F25564; direction: rtl; display: none" class="col-9 label" id="name-edit-status">введіть ім’я</h3>
                </div>
                <input asp-for="Input.FirstName" class="input-setting text ml-auto" autocomplete="username" 
                        aria-required="true" required id="name-input"/>
                <hr style="width:100%">

                <div class="row" style="margin-left: 5px; width: 40%; margin-top: 30px">   
                    <h3 class="col-2 label-setting" style="margin-top: 5px">Призвіще</h3>
                    <h3 style="color:#F25564; direction: rtl; display: none" class="col-9 label" id="lastname-edit-status">введіть призвіще</h3>
                </div>
                <input asp-for="Input.LastName" class="input-setting text ml-auto" autocomplete="username" 
                        aria-required="true" required id="lastname-input" />
                <hr style="width:100%">
            </div>
        </div>

        <div class="col-6" >
            <div class="form-floating mb-3" style="margin-left: 30px;">
                <div class="row" style="margin-left: 5px; width: 370px">   
                    <h3 class="col-2 label-setting" style="margin-top: 5px">Телефон</h3>
                    <h3 style="color:#F25564; direction: rtl; display: none" class="col-9 label" id="phone-edit-status">введіть номер</h3>
                </div>
                <input asp-for="Input.PhoneNumber" class="input-setting text ml-auto" autocomplete="phone" 
                        aria-required="true" required id="phone-input" placeholder="+38098887323"/>
                <hr style="width:370px">

                <div class="row" style="margin-left: 5px; width: 370px; margin-top: 30px">   
                    <h3 class="col-2 label-setting" style="margin-top: 5px">Пошта</h3>
                    <h3 style="color:#F25564; direction: rtl; display: none" class="col-9 label" id="email-edit-status">введіть пошту</h3>
                </div>
                <input asp-for="Input.EmailAddress" class="input-setting text ml-auto" autocomplete="email" 
                        aria-required="true" required id="email-input"/>
                <hr style="width:370px">
            </div>
        </div>

        <div class="center-items-inside mt-5">
            <button type="submit" class="save-btn" id="submit-btn">Сберегти зміни</button>
        </div>
    </div>
</form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/main_info_validator.js"></script>
}
