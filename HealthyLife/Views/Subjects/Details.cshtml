@model HealthyLife.Models.Subject

@{
    ViewData["Title"] = "Деталі";
}

<h1 style="text-align: center">Деталі тематики</h1>
<hr />

<div style="width:100%;display:flex; align-items:center;justify-content: center;">
<div style="width:20%;margin-top: 30px" class="form-shadow" >  
    <div style="display:flex; align-items:center; justify-content: center; font-weight: 300;font-size: 40px;
            line-height: 64px;text-align: center; color: #2C3447;" >
            @Html.DisplayFor(model => model.SubjectName)
    </div>
</div>
</div>

<div style="width:99%;display:flex; align-items:center;justify-content: center; margin-left: 1%">
<div style="margin-bottom: 10px;margin-top: 30px; width: 30%; display:flex; align-items:center;justify-content: center;" >

    <a asp-action="Edit" asp-route-id="@Model?.Id" class="my-btn-warning" style="text-decoration: inherit;
            color: inherit; height: 47px; width:140px; display:flex; align-items:center; justify-content: center;">
        Редагувати
    </a>
    <a asp-action="Index" class="my-btn" style="text-decoration: inherit;color: inherit; height: 47px; width:140px
        display:flex; align-items:center; justify-content: center; padding: 10px 35px">
            До списку
    </a>
</div>
</div>
