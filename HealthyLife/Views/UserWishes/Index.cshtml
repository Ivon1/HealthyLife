@using Microsoft.AspNetCore.Html;
@model IEnumerable<HealthyLife.Models.UserWish>

@{
    ViewData["Title"] = "Список бажань";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-70px mb-70px">
    <div class="row grid-div-user-wishes">
        @foreach (var course in Model)
        {
            <div class="col-md-4" style="margin-top: 25px;">
                <div class="product-card" style="background-image: url('../img/img_courses/@course.Course.PathToPhoto');">                    
                    @if (course.Course.Price > 1500)
                    {
                        <a style="background-color: #F7A121;
                                        height: 36px; width: 37px; border-bottom-right-radius: 20px;
                                        position: absolute; border-top-left-radius: 20px; padding: 20px" asp-controller="Courses"
                   asp-action="Details" asp-route-id="@course.Course.Id">
                            <img src="~/img/icons/I.png" width="20px" height="20px"
                         style="position: absolute; left: 10px; top: 10px" />
                        </a>
                    }
                    else if (course.Course.Price.Equals(0))
                    {
                        <a style="background-color: #1A9F83;
                                        height: 36px; width: 37px; border-bottom-right-radius: 20px;
                                        position: absolute; border-top-left-radius: 20px; padding: 20px" asp-controller="Courses"
                   asp-action="Details" asp-route-id="@course.Course.Id">
                            <img src="~/img/icons/I.png" width="20px" height="20px"
                         style="position: absolute; left: 10px; top: 10px" />
                        </a>
                    }
                    else
                    {
                        <a style="background-color: #F47C50;
                                        height: 36px; width: 37px; border-bottom-right-radius: 20px;
                                        position: absolute; border-top-left-radius: 20px; padding: 20px" asp-controller="Courses"
                   asp-action="Details" asp-route-id="@course.Course.Id">
                            <img src="~/img/icons/I.png" width="20px" height="20px"
                         style="position: absolute; left: 10px; top: 10px" />
                        </a>
                    }

                    @if (course.Course.Price > 1500)
                    {
                        <a style="background-color: #F7A121; position: absolute;
                                        height: 36px; width: 112px; border-bottom-left-radius: 20px;
                                        border-top-right-radius: 20px; padding: 20px; top: 0; right: 0;
                                        text-decoration:none" asp-controller="Courses" asp-action="Details" asp-route-id="@course.Course.Id">
                            <h3 style="position: absolute; left: 30%; top: 5px; color: #FFFFFF">
                                @{
                                    var price = Convert.ToInt16(course.Course.Price).ToString();
                                }
                                @price ₴
                            </h3>
                        </a>

                    }
                    else if (course.Course.Price.Equals(0))
                    {
                        <a style="background-color: #1A9F83; position: absolute;
                                        height: 36px; width: 112px; border-bottom-left-radius: 20px;
                                        border-top-right-radius: 20px; padding: 20px; top: 0; right: 0;
                                        text-decoration:none" asp-controller="Courses" asp-action="Details" asp-route-id="@course.Course.Id">
                            <h3 style="position: absolute; left: 25%; top: 5px; color: #FFFFFF">ДАРОМ</h3>
                        </a>
                    }
                    else
                    {
                        <a style="background-color: #F47C50; position: absolute;
                                        height: 36px; width: 112px; border-bottom-left-radius: 20px;
                                        border-top-right-radius: 20px; padding: 20px; top: 0; right: 0;
                                        text-decoration:none" asp-controller="Courses" asp-action="Details" asp-route-id="@course.Course.Id">
                            <h3 style="position: absolute; left: 28%; top: 5px; color: #FFFFFF">
                                @{
                                    var price = Convert.ToInt16(course.Course.Price).ToString();
                                }
                                @price ₴
                            </h3>
                        </a>
                    }
                    <div style="margin-top: 148px; height: 145px; width: 100%; position: relative;">
                        <img src="~/img/icons/white.png" width="100%" height="145px" style="position: absolute;
                                    filter: alpha(Opacity=90);opacity: 0.90;
                                    border-radius: 0% 0% 20px 20px" />
                        <div class="row" style="z-index: 100; width: 100%; height: 100px; position: absolute; display: flex; justify-content: center; align-items: center">
                            <div class="col-md-10">
                                <h4 style="font-weight: 400; font-size:28px; text-align: justify; padding-left: 5%; padding-top: 5%">
                                    @{
                                        HtmlString str = new HtmlString(course.Course.CourseDescriptionShort);
                                        @str
                                    }
                                </h4>
                            </div>
                            <div class="col-md-2" style="display: flex; max-height: 100px; justify-content: flex-end; align-items: center;">
                                <img src="~/img/icons/heart_purpur.png" class="disabled" width="23px" height="20px" />
                            </div>
                        </div>
                    </div>
                    <a style="background-color: #F25564; position: absolute;
                                            height: 36px; width: 112px; border-bottom-right-radius: 20px;
                                            border-top-left-radius: 20px; padding: 20px; bottom: 0; right: 0;
                                            text-decoration:none; display: flex; justify-content: center; align-items: center" asp-action="Delete" asp-route-id="@course.Id">
                        <h3 style="text-align: center; color: #FFFFFF; font-weight:400; font-size: 25px; padding-top: 5px">
                            видалити
                        </h3>
                    </a>
                </div>
            </div>
        }
        <div class="col-md-4" style="margin-top: 25px;">
            <a asp-controller="Courses" asp-action="Index" style="text-decoration: none">
                <div class="product-card" style="display: grid; justify-content: center; align-items: center">
                    <div style="display: flex; justify-content: center; align-items: center; margin-top: 35%">
                        <img src="~/img/icons/add_course_to_wishlist.png" width="112px" height="113px" />
                    </div>
                    <div style="display: flex; justify-content: center; align-items:flex-end; margin-top: 35%">
                        <p style="color: #808080; font-size: 25px; font-weight: 500">ПЕРЕЙТИ ДО КУРСІВ</p>
                    </div>
                </div>
            </a>            
        </div>
    </div>
</div>

<div style="width: 100%; height: 50px; margin-bottom: auto; margin-top: 35px; background: rgb(205,112,121);
     background: linear-gradient(90deg, rgba(205,112,121,1) 0%, rgba(200,140,140,1) 100%, rgba(200,140,140,1) 100%);">
</div>
